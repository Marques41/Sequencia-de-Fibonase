print('-=-'*12)
print('Descubra o somatorio dos numeros: ')
print('-=-'*12)
n = cont = soma = 0
while True:
    n = int(input('Digite um numero [999 para parar]: '))
    if n == 999:
        break
    cont += 1
    soma += n

print(f'VocÃª digitou {cont} e o valor total do somatorio foi de {soma}')
